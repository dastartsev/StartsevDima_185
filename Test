public static int Input()
    {
        int a;

        while (!int.TryParse(Console.ReadLine(), out a) || a <= 0)
        {
            Console.WriteLine("Неверный ввод, введите целое число большее 0");
        }

        return a;
    }
    
    
do{
    
} while (Console.ReadKey(true).Key != ConsoleKey.Enter);
